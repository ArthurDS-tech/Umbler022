{
    "name": "umbler-webhook-backend",
    "version": "1.0.0",
    "description": "Backend completo para webhook da Umbler integrado com PostgreSQL (Neon)",
    "main": "src/app.js",
    "scripts": {
        "start": "node src/app.js",
        "dev": "nodemon src/app.js",
        "dev:tunnel": "set AUTO_START_TUNNEL=true && nodemon src/app.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "setup": "node scripts/setup-database.js",
        "setup:quick": "node scripts/setup-quick.js",
        "migrate": "node scripts/migrate.js",
        "seed": "node scripts/seed-data.js",
        "test:connection": "node scripts/test-connection.js",
        "configure": "node scripts/configure-postgresql.js",
        "lint": "eslint src/ --fix",
        "format": "prettier --write src/",
        "build": "echo 'No build step required for Node.js'",
        "docker:build": "docker build -t umbler-webhook .",
        "docker:run": "docker run -p 3000:3000 umbler-webhook",
        "docker:dev": "docker-compose up -d",
        "docker:down": "docker-compose down",
        "logs": "tail -f logs/app.log",
        "clean": "rm -rf node_modules package-lock.json logs/*",
        "health": "curl -f http://localhost:3000/health || exit 1",
        "db:setup": "node scripts/setup-postgresql.js",
        "db:migrate": "node scripts/migrate-postgresql.js",
        "db:seed": "node scripts/seed-postgresql.js",
        "db:backup": "node scripts/backup-postgresql.js",
        "db:restore": "node scripts/restore-postgresql.js",
        "test:webhook": "node scripts/test-webhook-postgresql.js",
        "test:webhook:auto": "node scripts/test-webhook-postgresql.js --auto",
        "supabase:setup": "node setup-supabase-complete.js",
        "supabase:test": "node test-webhook-supabase.js"
    },
    "keywords": [
        "webhook",
        "umbler",
        "whatsapp",
        "postgresql",
        "neon",
        "node.js",
        "express",
        "api"
    ],
    "author": "Seu Nome",
    "license": "MIT",
    "dependencies": {
        "@supabase/supabase-js": "^2.53.0",
        "axios": "^1.6.2",
        "bcryptjs": "^2.4.3",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "crypto": "^1.0.1",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-async-errors": "^3.1.1",
        "express-rate-limit": "^7.1.5",
        "express-validator": "^7.0.1",
        "helmet": "^7.1.0",
        "joi": "^17.11.0",
        "jsonwebtoken": "^9.0.2",
        "lodash": "^4.17.21",
        "moment": "^2.29.4",
        "multer": "^1.4.5-lts.1",
        "pg": "^8.11.3",
        "pg-pool": "^3.6.1",
        "sharp": "^0.32.6",
        "uuid": "^9.0.1",
        "validator": "^13.11.0",
        "winston": "^3.11.0",
        "winston-daily-rotate-file": "^4.7.1"
    },
    "devDependencies": {
        "@types/jest": "^29.5.8",
        "eslint": "^8.55.0",
        "eslint-config-node": "^4.1.0",
        "eslint-plugin-node": "^11.1.0",
        "jest": "^29.7.0",
        "jest-environment-node": "^29.7.0",
        "ngrok": "^5.0.0-beta.2",
        "nodemon": "^3.0.2",
        "prettier": "^3.1.1",
        "supertest": "^6.3.3"
    },
    "engines": {
        "node": ">=16.0.0",
        "npm": ">=8.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/seu-usuario/umbler-webhook-backend.git"
    },
    "bugs": {
        "url": "https://github.com/seu-usuario/umbler-webhook-backend/issues"
    },
    "homepage": "https://github.com/seu-usuario/umbler-webhook-backend#readme",
    "jest": {
        "testEnvironment": "node",
        "setupFilesAfterEnv": [
            "<rootDir>/tests/setup.js"
        ],
        "testMatch": [
            "<rootDir>/tests/**/*.test.js"
        ],
        "collectCoverageFrom": [
            "src/**/*.js",
            "!src/app.js",
            "!src/config/*.js"
        ],
        "coverageDirectory": "coverage",
        "coverageReporters": [
            "text",
            "lcov",
            "html"
        ]
    },
    "nodemonConfig": {
        "watch": [
            "src"
        ],
        "ext": "js,json",
        "ignore": [
            "tests/",
            "logs/",
            "node_modules/"
        ],
        "exec": "node src/app.js"
    },
    "eslintConfig": {
        "env": {
            "node": true,
            "es2021": true,
            "jest": true
        },
        "extends": [
            "eslint:recommended"
        ],
        "parserOptions": {
            "ecmaVersion": "latest",
            "sourceType": "module"
        },
        "rules": {
            "no-unused-vars": [
                "error",
                {
                    "argsIgnorePattern": "^_"
                }
            ],
            "no-console": "warn",
            "prefer-const": "error",
            "no-var": "error"
        }
    },
    "prettier": {
        "semi": true,
        "trailingComma": "es5",
        "singleQuote": true,
        "printWidth": 80,
        "tabWidth": 2
    }
}
